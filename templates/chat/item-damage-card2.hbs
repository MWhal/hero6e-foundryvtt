{{ log 'HEROSYS item-damage-card2' this }}
<div class="hero chat-card item-card damage-card2" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
     {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>

    <div>
        Damage Roll: <span class="item-name">{{item.name}}</span>
    </div>

    <div class="tags">
        <span class="tag">{{item.system.class}}</span>
    </div>
    <hr>
    <div class="tags">
        {{#each tags as |tag id|}}
        <span class="tag tag_transparent">{{tag.name}} +{{tag.value}}</span>
        {{/each}}
    </div>

    <div class="hit-roll">

        <div class="card-section">
            {{#if useHitLoc}}
                <div class="description-tiny">{{ hitLocText }}</div>
            {{/if}}
            <div class="damage-roll">{{{ renderedDamageRoll }}}</div>
            {{#if hasStunMultiplierRoll}}
            <div class="description-tiny">Stun Multiplier</div>
                <div class="stun-x-roll">{{{ renderedStunMultiplierRoll }}}</div>
                <div class="description-tiny">{{ stunMultiplier }}X STUN MULTIPLIER</div>
            {{/if}}
            <div class="description-tiny">
                (Raw Damage) {{ bodyDamage }} BODY; {{ stunDamage }} STUN
            </div>
        </div>

        <button class="apply-damage" 
            title="Apply damage to selected tokens."
            data-itemId="{{item.uuid}}"
            data-targetIds="{{targetIds}}"
            data-bodyDamage="{{bodyDamage}}"
            data-stunDamage="{{stunDamage}}"
            data-dice="{{dice}}"
            data-stunMultiplier="{{stunMultiplier}}"
            >Apply Damage</button>

        <div>
            {{#each targets as |target id|}}
            <span>{{target.name}}</span>
            {{/each}}
        </div>
    </div>
</div>
