<form>
    <div class="hero chat-card item-card attack-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
        {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}}>
        <header class="card-header flexrow">
            <img src="{{item.img}}" title="{{item.name}}" width="36" height="36"/>
            <h3 class="item-name">{{item.name}}</h3>
        </header>
    </div>

    <div class="form-group">
        <label>Roll Modifier</label>
        <input type="text" name="mod" value="0"/>
    </div>
    <label>(+ is harder, - is easier)</label>
</form>
