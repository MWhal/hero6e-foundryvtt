<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}" data-realId="{{system.realId}}">
    <header class="sheet-header flexrow" >
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname" >
                <input name="name" type="text" value="{{item.name}}" placeholder="Attack Name" />
            </h1>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body" >
        <textarea
            placeholder="Attack Description"
            class="power-card-power-description textarea input"
            name="system.rules"
        >{{system.rules}}</textarea>

        <div class="form-group" >
            <label>END Cost</label>
            <input type="text" name="system.end" value="{{system.end}}" data-dtype="Number" />
        </div>

        <div class="form-group" >
            <label>Class</label>
            <select name="system.class" data-dtype="text">
                {{selectOptions config.attackClasses selected=system.class}}
            </select>
        </div>

        <div class="form-group" >
            <label>To Hit Modifier</label>
            <input type="text" name="system.toHitMod" value="{{system.toHitMod}}" data-dtype="Number" />
        </div>

        <div class="form-group" >
            <label>Value</label>
            <input type="text" name="system.dice" value="{{system.dice}}" data-dtype="Number" />
            D6
            <select name="system.extraDice" data-dtype="text">
                {{selectOptions config.extraDice selected=system.extraDice}}
            </select>
        </div>

        <div class="form-group" >
            <label>Killing Attack</label>
            <input type="checkbox" name="system.killing" {{checked system.killing}} data-dtype="Boolean" />
        </div>

        {{!--
        <div class="form-group">
            <label>Levels of Armor Piercing</label>
            <input type="text" name="system.piercing" value="{{data.piercing}}" data-dtype="Number" />
        </div>

        <div class="form-group">
            <label>Levels of Penetrating</label>
            <input type="text" name="system.penetrating" value="{{data.penetrating}}" data-dtype="Number" />
        </div>

        <div class="form-group">
            <label>Total Attack Advantages</label>
            <input type="text" name="system.advantages" value="{{data.advantages}}" data-dtype="Number" />
        </div>
        --}}

        <div class="form-group" >
            <label>Targets Using</label>
            <select name="system.uses" data-dtype="text">
                {{selectOptions config.attacksWith selected=system.uses}}
            </select>
        </div>

        <div class="form-group" >
            <label>Avoided By</label>
            <select name="system.targets" data-dtype="text">
                {{selectOptions config.defendsWith selected=system.targets}}
            </select>
        </div>

        <div class="form-group" >
            <label>Does Knockback</label>
            <input type="checkbox" name="system.knockback" {{checked system.knockback}} data-dtype="Boolean" />
        </div>

        <div class="form-group" >
            <label>Uses Strength</label>
            <input type="checkbox" name="system.usesStrength" {{checked system.usesStrength}} data-dtype="Boolean" />
        </div>

        <div class="form-group" >
            <label>Custom Effects</label>
            <textarea
                placeholder="Attack Description"
                class="power-card-power-description textarea input"
                name="system.effects"
            >{{item.system.effects}}</textarea>
        </div>
    </section>
</form>
