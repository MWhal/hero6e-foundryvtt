{{ log 'HEROSYS SKILL SHEET' this }}
<form class="{{cssClass}}" autocomplete="off" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
    <header class="sheet-header" >
        <img class="profile-img" name="img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
        <div class="header-fields">
            <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            <div class="flexrow flex-center">
              <div class="resource flexrow flex-center" >
                  <label class="resource-label">Levels</label>
                  <input type="text" name="system.levels" value="{{system.levels}}" data-dtype="Number"/>
              </div>
            </div>
        </div>
    </header>

    {{!-- Sheet Body --}}
    <section class="sheet-body" >
        <div>{{system.characteristic}}</div>
        <div class="form-group">
            <label>Characteristic</label>
            <select name="system.characteristic" data-dtype="text">
                {{selectOptions config.skillCharacteristics selected=system.characteristic}}
            </select>
        </div>

        <div class="form-group">
            <label>Training</label>
            <select name="system.state" data-dtype="text">
                {{selectOptions config.skillTraining selected=system.state}}
            </select>
        </div>

        <div class="form-group">
            <label>Description</label>
            <input type="text" name="system.description" value="{{system.description}}" data-dtype="text" />
        </div>

        <div class="form-group">
            <label>OptionAlias</label>
            <input type="text" name="system.optionAlias" value="{{system.optionAlias}}" data-dtype="text" />
        </div>
        

        
    </section>
</form>
