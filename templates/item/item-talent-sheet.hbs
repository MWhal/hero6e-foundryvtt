<form class="hero {{cssClass}} flexcol actor-sheet" autocomplete="off">
    <header class="sheet-header flexrow" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
        <img class="profile" name="img" src="{{item.img}}" title="{{item.name}}" data-edit="img" />

        <div class="header-details flexrow">
            <h1 class="charname" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
                <input name="name" type="text" value="{{item.name}}" placeholder="Talent Name" />
            </h1>
        </div>
    </header>

    <section class="sheet-body" data-id="{{item._id}}" data-realId="{{item.system.realId}}">
        <textarea
            placeholder="Power Description"
            class="power-card-power-description textarea input"
            name="system.rules"
        >{{item.system.rules}}</textarea>
    </section>
</form>
