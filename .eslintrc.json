{
    "plugins": [
        "@stylistic/js"
    ],

    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Actor": "readable",
        "canvas": "readable",
        "ChatMessage": "readable",
        "CONFIG": "writable",
        "CONST": "readable",
        "Dialog": "readable",
        "FilePicker": "readable",
        "fromUuid": "readable",
        "foundry": "readable",
        "game": "readable",
        "HeroRuler": "readable",
        "Hooks": "readable",
        "ImageHelper": "readable",
        "NumericTerm": "readable",
        "OperatorTerm": "readable",
        "PIXI": "readable",
        "renderTemplate": "readable",
        "Roll": "readable",
        "TokenDocument": "readable",
        "ui": "readable"
    },

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },

    "rules": {
    },
    "reportUnusedDisableDirectives": true
}
